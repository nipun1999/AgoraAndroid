<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_2"
    tools:context=".registerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="left"
                android:layout_weight="0.2"
                android:id="@+id/backBtn"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/backbtn" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Create Election"
                android:layout_weight="2.3"
                android:textAlignment="center"
                android:fontFamily="@font/ralewaybold"
                android:textSize="24dp"
                android:textColor="@android:color/white" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2/4"
                android:textSize="18dp"
                android:layout_weight="1"
                android:fontFamily="@font/ralewayextrabold"
                android:textColor="@android:color/white"/>

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="-1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:gravity="center">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:hint="Candidate Name"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rectangle_4">

                    </EditText>

                    <android.support.v7.widget.CardView
                        android:layout_width="139dp"
                        android:layout_height="42dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="17dp"
                        android:layout_marginTop="25dp"
                        android:background="@android:color/transparent"
                        app:cardElevation="5dp">

                        <Button

                            android:background="@drawable/createelectionbutton"
                            android:layout_width="139dp"
                            android:text="Add"
                            android:textSize="16dp"
                            android:fontFamily="@font/ralewaybold"
                            android:textColor="@android:color/white"
                            android:layout_height="42dp" />

                    </android.support.v7.widget.CardView>

                    
                </LinearLayout>

            </android.support.v7.widget.CardView>





        </RelativeLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="27dp"
            app:cardElevation="-1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected Candidates"
                    android:textSize="22dp"
                    android:layout_gravity="center"
                    android:textAppearance="@style/register"
                    android:fontFamily="@font/ralewaybold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/ralewaymedium"
                android:text="1. Mr XYZ \n \n2. Mr Abc \n \n3. Mr Def \n \n4. Mr Efg"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="324dp"
            app:cardCornerRadius="29dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="7dp"
            android:layout_height="51dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nextBtn"
                android:text="Next"
                android:elevation="1dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:fontFamily="@font/ralewaybold"
                android:background="@drawable/nextelectionbutton"/>

        </android.support.v7.widget.CardView>




    </LinearLayout>

</ScrollView>