<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_2"
    tools:context=".registerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="left"
                android:layout_weight="0.2"
                android:id="@+id/backBtn"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/backbtn" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Create Election"
                android:layout_weight="2.3"
                android:textAlignment="center"
                android:fontFamily="@font/ralewaybold"
                android:textSize="24dp"
                android:textColor="@android:color/white" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4/4"
                android:textSize="18dp"
                android:layout_weight="1"
                android:fontFamily="@font/ralewayextrabold"
                android:textColor="@android:color/white"/>

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="-1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:weightSum="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.6"
                            android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/ralewaymedium"
                            android:text="Get Realtime Results"/>

                        <RadioButton
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"

                                android:fontFamily="@font/ralewaymedium"
                                android:text="Inline Voters"/>

                            <RadioButton
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:text="How Secret are these ballots ? "/>


                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Ballots are completely secret and never shown to anyone"
                        android:layout_height="match_parent" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Ballots are only visible to me"
                        android:layout_height="match_parent" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Ballots are visible to everyone with access to election"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ralewaysemibold"
                        android:text="Who can see the list of voters ? "/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Only me"
                        android:layout_height="match_parent" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Access to Everyone"
                        android:layout_height="match_parent" />


                </LinearLayout>



            </android.support.v7.widget.CardView>



        </RelativeLayout>



        <android.support.v7.widget.CardView
            android:layout_width="324dp"
            app:cardCornerRadius="29dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="7dp"
            android:layout_height="51dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/createBtn"
                android:text="Create"
                android:elevation="1dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:fontFamily="@font/ralewaybold"
                android:background="@drawable/nextelectionbutton"/>

        </android.support.v7.widget.CardView>




    </LinearLayout>

</ScrollView>