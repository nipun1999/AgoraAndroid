<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".completedElection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <View
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-71dp"
            android:background="@drawable/cuvedbackground"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_marginTop="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.3"
                    android:src="@drawable/backbtn"/>

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:layout_weight="1.8"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/ralewaybold"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:text="@string/elections"/>

                <TextView
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="@font/ralewayextrabold"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_marginRight="30dp"
                    android:text="@string/Completed"/>


            </LinearLayout>


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/ralewaymedium"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:text="@string/results"/>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="35dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/react_native"
                        android:layout_weight="1.8"
                        android:fontFamily="@font/ralewaysemibold"
                        android:layout_marginTop="10dp"
                        android:textAppearance="@style/winner"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your vote"
                        android:layout_marginTop="7dp"
                        android:textStyle="italic"/>


                </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/flutter"
                            android:textSize="14dp"
                            android:layout_weight="1.8"
                            android:fontFamily="@font/ralewaybold"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="23dp"/>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>




        </FrameLayout>


        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/description"
            android:textAppearance="@style/description"
            android:gravity="center_horizontal|top"
            />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            >

            <EditText
                android:backgroundTint="@android:color/transparent"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:background="@drawable/curvededittext"
                android:textSize="12dp"
                android:text="Election to decide which one is better"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/start"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/ralewaysemibold"
                    android:gravity="center_horizontal|top"
                    android:text="@string/start"
                    android:textAppearance="@style/description" />


                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp">

                    <EditText
                        android:layout_width="125dp"
                        android:layout_height="35dp"
                        android:background="@drawable/curvededittext"
                        android:backgroundTint="@android:color/transparent"
                        android:text="@string/_02_04_1999"
                        android:textAlignment="center"
                        android:textSize="12dp" />

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/stop"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/ralewaysemibold"
                    android:gravity="center_horizontal|top"
                    android:text="@string/stop"
                    android:textAppearance="@style/description" />


                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp">

                    <EditText
                        android:layout_width="125dp"
                        android:layout_height="35dp"
                        android:background="@drawable/curvededittext"
                        android:backgroundTint="@android:color/transparent"
                        android:text="@string/_02_04_1999"
                        android:textAlignment="center"
                        android:textSize="12dp" />

                </android.support.v7.widget.CardView>


            </LinearLayout>





        </RelativeLayout>


        <TextView
            android:id="@+id/algorithm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/algorithm"
            android:textAppearance="@style/description"
            android:gravity="center_horizontal|top"
            />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            >

            <EditText
                android:backgroundTint="@android:color/transparent"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:background="@drawable/curvededittext"
                android:textSize="12dp"
                android:text="@string/minimax_condorset"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/candidates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/candidates"
            android:textAppearance="@style/description"
            android:gravity="center_horizontal|top"
            />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            >

            <EditText
                android:backgroundTint="@android:color/transparent"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/curvededittext"
                android:textSize="12dp"
                android:text="1. Mr Xyz \n2.Mr Abc \n3.Mr Pqr \n4.Mr abc"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>




    </LinearLayout>

</ScrollView>